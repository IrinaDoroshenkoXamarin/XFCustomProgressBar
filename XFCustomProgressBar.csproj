<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>XFCustomProgressBar.doroshenko_iryna</PackageId>
    <Id>XFCustomProgressBar.doroshenko_iryna</Id>
    <Version>1.0.0</Version>
    <Authors>doroshenko_iryna</Authors>
    <Company>doroshenko_iryna</Company>
     <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Xamarin.Forms Customized progress bar for iOS and Android with animation and possibility to select brush type and customize borders, backgrounds and lot of things. </description>
    <releaseNotes>Fixed percentage counting</releaseNotes>
    <copyright>Copyright 2021</copyright>
    <tags>xamarinforms proggressbar progress custimized xfbar</tags>
    <title>XFCustomProgressBar</title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2083" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Controls\" />
    <None Remove="Enums\" />
    <None Remove="Resources\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Controls\" />
    <Folder Include="Enums\" />
    <Folder Include="Resources\" />
  </ItemGroup>
</Project>
